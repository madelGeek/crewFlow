{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "app/*"
      ]
    },
    "types": ["reflect-metadata"],
    "moduleResolution": "node",
    "emitDecoratorMetadata": true
  },
  "include": [
    "./app/**/**/*"
  ]
}